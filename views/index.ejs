<script type="text/ng-template" id="/home.html" ng-src="/javascripts/home.js">
  <div ng-hide="isLoggedIn()">
      <p>You need to <a href="/#/login" ng-click="setHide()">Log In</a> or <a href="/#/register" ng-click="setHide()">Sign Up</a> before you can add a post.</p>
    </div>

  <form ng-submit="addPost()" ng-show="isLoggedIn()" style="margin-top:30px;" method="post">

    <p>Add a new post</p>

    <div class="form-group">
      <input type="text"
        class="form-control"
        placeholder="Title"
        ng-model="title"></input>
    </div>
    <div class="form-group">
      <input type="text"
      class="form-control"
      placeholder="Link"
      ng-model="link"></input>
    </div>

    <button type="submit" class="btn btn-default">Post</button>
  </form>

  <ul ui-sortable ng-model="posts"> 
    <li ng-repeat="post in posts ">
      <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(post)"></span>
      {{post.upvotes}}
      <span style="font-size:15px; margin-left:10px;">
          <a ng-show="post.link" ng-href="http://{{post.link}}">
            {{post.title}} 
          </a>
          <span ng-hide="post.link" style="font-size:15px; margin-left:10px;">
            {{post.title}}
          </span>
          <span ng-show="post.author" style="font-size:15px; margin-left:10px;">
            posted by <a>{{post.author}}</a> 
          </span>
      </span>
      <span style="font-size:15px; margin-left:10px;">
          <a href="#/posts/{{post._id}}">Comments</a>
      </span>
      <span style="font-size:15px; margin-left:10px;" class= "glyphicon glyphicon-trash" ng-show="isLoggedIn()" ng-click= "deletePost($index,post)"></span>
    </li>
  </ul>
  <hr>
</script>

<script type="text/ng-template" id="/posts.html">

<div class="page-header">
    <h3>
      <a ng-show="post.link" href="{{post.link}}">
        {{post.title}}
      </a>
      <span ng-hide="post.link">
        {{post.title}}
      </span>
    </h3>
  </div>

  <div ng-repeat="comment in post.comments "> 
    <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(comment)"></span>
    {{comment.upvotes}} - by {{comment.author}}
    <span style="font-size:20px; margin-left:10px;">
      {{comment.body}}
    </span>
    <span class= "glyphicon glyphicon-trash" ng-click= "deleteComment($index,comment)"></span>
  </div>

  <form ng-submit="addComment()" ng-show="isLoggedIn()" style="margin-top:30px;">

    <div ng-hide="isLoggedIn()">
      <p>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Sign Up</a> before you can comment.</p>
    </div>
    <p style="font-size:15px; font-weight: bold;">Add a new comment</p>

    <div class="form-group">
      <input type="text"
      class="form-control"
      placeholder="Comment"
      ng-model="body"></input>
    </div>
    <button type="submit" class="btn btn-default">Post</button>
  </form>
  <a href="/#/home">Back</a>

</script>


<script type="text/ng-template" id="/register.html">
 


  <div class="row">
    <div class="col-md-6">
      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>
      <form ng-submit="register()"
      style="margin-top:30px;">
      <h3 class= "formy">Register</h3>

      <div class="form-group formx">
        <input type="text"
        class="form-control"
        placeholder="Username"
        ng-model="user.username" 
        autofocus="autofocus"></input>
      </div>
      <div class="form-group formx">
        <input type="text"
        class="form-control"
        placeholder="Email"
        ng-model="user.email"></input>
      </div>
      <div class="form-group formx">
        <input type="password"
        class="form-control"
        placeholder="Password"
        ng-model="user.password"></input>
      </div>
      <div class="form-group formx">
        <input type="password"
        class="form-control"
        placeholder="Repeat Password"
        ng-model="user.password"></input>
      </div>
      <div class="formy">
        <button type="submit" class="btn btn-default" ng-click="getHide()">Register</button>
      </div>
      <hr>
      <div class="formy">
        <div class="btn btn-facebook" ><span class="glyphicon glyphicon-log-in"></span> &nbsp;&nbsp;&nbsp;&nbsp; Log In with Facebook</div>
      </div>
      </form>
      </div>
      <div class="col-md-6">
          <h3 class= "formy">How it Works</h3>
          <div class= "formy">
            <iframe width="420" height="345"
              src="http://www.youtube.com/embed/415iM8rr1X8">
            </iframe>
          </div>
      </div>
  </div>

  
</script>


<script type="text/ng-template" id="/login.html">

